<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".reservation_form">

    <!--<ListView
        android:id="@+id/myList"
        android:layout_width="match_parent"
        android:layout_height="624dp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="64dp" />-->
    <RelativeLayout
        android:id="@+id/layoutTopBar"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/red"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:text="inTea Delight"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appName"
            android:layout_alignStart="@+id/appName"
            android:layout_alignParentRight="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="71dp"
            android:text="Bring your joy \nEnjoy your foodies"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/notification"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/ic_notifications_black_24dp" />

    </RelativeLayout>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="165dp"
        android:layout_height="59dp"
        android:layout_below="@+id/tablePic"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="29dp" />

    <TextView
        android:id="@+id/show_time"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_below="@+id/tablePic"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="120dp"
        android:text="Date:" />

    <TextView
        android:id="@+id/show_table"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_below="@+id/show_time"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="8dp"
        android:text="Time:" />

    <TextView
        android:id="@+id/Title_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"

        android:text="Table reservation"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/select_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner2"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="31dp"
        android:gravity="center"

        android:hint="Select Date"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/select_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_Date"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="39dp"
        android:gravity="center"
        android:hint="Select Time"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_Time"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:text="Submit" />


    <ImageView
        android:id="@+id/tablePic"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_below="@id/Title_form"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/reservation" />

    <RelativeLayout
        android:id="@+id/bgcolor"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:accessibilityHeading="false"
        android:background="#D53C3C"
        android:elevation="4dp"
        android:visibility="visible">

        <Button
            android:id="@+id/home1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/ic_home_black_24dp"
            app:backgroundTint="#FFFFFF" />

        <Button
            android:id="@+id/orderHistory1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/ic_baseline_article_24"
            app:backgroundTint="#000000"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="278dp" />

        <Button
            android:id="@+id/cart1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/ic_baseline_shopping_cart_24"
            app:backgroundTint="#000000"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="236dp" />

        <Button
            android:id="@+id/account1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/ic_baseline_account_circle_24"
            app:backgroundTint="#000000" />


    </RelativeLayout>




</RelativeLayout>