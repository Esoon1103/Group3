<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".reservation_form">

    <!--<ListView
        android:id="@+id/myList"
        android:layout_width="match_parent"
        android:layout_height="624dp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="64dp" />-->




    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="165dp"
        android:layout_height="59dp"

        android:layout_marginLeft="75dp"
        android:layout_marginTop="101dp" />

    <TextView
        android:id="@+id/show_time"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="190dp"

        android:text="Time:" />

    <TextView
        android:id="@+id/show_table"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_below="@+id/show_time"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-1dp"
        android:text="Date:" />

    <TextView
        android:id="@+id/Title_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"

        android:text="Table reservation"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/select_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner2"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="31dp"
        android:gravity="center"

        android:hint="Select Date"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/select_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_Date"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="39dp"
        android:gravity="center"
        android:hint="Select Time"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_Time"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="83dp"
        android:gravity="center"
        android:text="Submit" />


</RelativeLayout>