<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/foodImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/rice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemBar"
        android:layout_width="317dp"
        android:layout_height="131dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/box"
        android:backgroundTint="#FFFFFF"
        android:breakStrategy="high_quality"
        android:drawingCacheQuality="auto"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/foodImage"
        app:layout_constraintStart_toStartOf="@+id/foodImage"
        app:layout_constraintTop_toBottomOf="@+id/foodImage" />

    <TextView
        android:id="@+id/foodName"
        android:layout_width="147dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        android:text="TOMYAM FRIED RICE"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/itemBar"
        app:layout_constraintTop_toTopOf="@+id/itemBar" />

    <TextView
        android:id="@+id/foodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        android:text="RM 6.00"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/itemBar"
        app:layout_constraintTop_toBottomOf="@+id/foodName" />

    <Button
        android:id="@+id/addToCart"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/red"
        android:elevation="10dp"
        android:text="Add to Cart"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/itemBar"
        app:layout_constraintEnd_toEndOf="@+id/itemBar" />

</androidx.constraintlayout.widget.ConstraintLayout>